{
  "name": "agendrix-actions-for-github",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "lint": "eslint **/*.ts",
    "build-all": "node build.js",
    "build-diff": "node build.js --diff \"$(git diff --staged --name-only)\"",
    "git-add-dist": "git add **/dist/*.js"
  },
  "pre-commit": [
    "build-diff",
    "git-add-dist"
  ],
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.3.1",
    "js-yaml": "^3.14.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  }
}
